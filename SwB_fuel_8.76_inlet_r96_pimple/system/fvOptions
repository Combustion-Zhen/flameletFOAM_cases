momentumSource
{
    type            pressureGradientExplicitSource;
    active          on;
    selectionMode   all;
    pressureGradientExplicitSourceCoeffs
    {
        fieldNames  (U);
        Ubar        (8.76 0 0);
        gradPini    gradPini [0 2 -2 0 0] 0;
        flowDir     (1 0 0);
    }
}
